@model IEnumerable<WebBanBanhConnection.PRODUCT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><strong>Danh sách sản phẩm</strong></h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Tên bánh</th>
                    <th>Giá bánh</th>
                    <th>Mô tả</th>
                    <th>Số lượng</th>
                    <th>Hình ảnh</th>
                    <th>CRUD</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.ProductName</td>
                    @{
                        var formattedPrice = string.Format("{0:N0}", item.Price - item.Price / item.Discount);
                    }
                    <td>
                        @formattedPrice VND
                    </td>
                    <td>@item.ShortDescription</td>
                    <td>@item.StockNumber</td>
                <td><img src="~/Content/img/shop/@item.Image"/></td>
                <td class="project-actions text-center">
                    <a class="btn btn-primary btn-sm" href="#">
                        <i class="fas fa-folder">
                        </i>
                        View
                    </a>
                    <a class="btn btn-info btn-sm" href="#">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>
                    <a class="btn btn-danger btn-sm" href="#">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </a>
                </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

