}
<section class="hero">
    <div class="hero__slider owl-carousel">
        <div class="hero__item set-bg" data-setbg="../../Content/img/hero/hero-1.jpg">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="hero__text">
                            <h2>Làm cho cuộc sống của bạn ngọt ngào hơn từng miếng một</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero__item set-bg" data-setbg="../../Content/img/hero/hero-2.png">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
