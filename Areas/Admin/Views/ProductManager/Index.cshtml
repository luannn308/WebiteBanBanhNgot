@model IEnumerable<WebBanBanhConnection.PRODUCT>
@using WebsiteCakeNew.Models.BUS
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success"><i class="fas fa-check" style="margin-right:8px"></i>@ViewBag.SuccessMessage</div>
}
<div class="card">
    <div class="d-flex align-items-center justify-content-between" style="padding: 0.75rem 1.25rem; border-bottom: 1px solid rgba(0, 0, 0, 0.125);background-color: #fcfcfc">
        <h3 class="card-title" style="text-transform:uppercase"><strong>Danh sách sản phẩm</strong></h3>
        <a class="btn btn-success btn-sm" href="@Url.Action("Create","ProductManager")">
            <i class="fas fa-plus"></i>
            Thêm
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example2" class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th style="text-transform: uppercase">STT</th>
                    <th style="text-transform: uppercase">Tên bánh</th>
                    <th style="text-transform: uppercase">Giá gốc</th>
                    <th style="text-transform: uppercase">Mô tả</th>
                    <th style="text-transform: uppercase">Số lượng</th>
                    <th style="text-transform: uppercase">Hình ảnh</th>
                    <th style="text-transform: uppercase">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            var formattedPriceSale = string.Format("{0:N0}", item.Price - item.Price * (DiscountBUS.GetPercentByID(item.Discount) / (float)100));
                            var formattedPrice = string.Format("{0:N0}", item.Price);
                        }
                        <td style="font-size: 20px; ">@item.ProductID</td>
                        <td style="font-size: 20px; ">@item.ProductName</td>
                        <td style="font-size: 20px; ">
                            @formattedPrice VND
                        </td>
                        <td style="font-size: 20px; text-align: justify;">@item.ShortDescription</td>
                        <td style="font-size: 20px;">@item.StockNumber</td>
                        <td ><img src="~/Content/img/shop/@item.Image" style="width: 100px" /></td>
                        <td class="project-actions text-center" style="text-wrap: nowrap;">
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Details","ProductManager", new { id = item.ProductID})">
                                <i class="fas fa-info">
                                </i>
                                Chi tiết
                            </a>
                            <a class="btn btn-info btn-sm" href="@Url.Action("Edit","ProductManager", new { id = item.ProductID})">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Sửa
                            </a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","ProductManager", new { id = item.ProductID})">
                                <i class="fas fa-trash">
                                </i>
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

