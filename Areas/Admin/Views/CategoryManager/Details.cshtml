@model WebBanBanhConnection.CATEGORY
@using WebsiteCakeNew.Models.BUS
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title"><em><strong>Thông tin chi tiết</strong></em></h3>
        <div class="card-tools">
            <a style="margin-right:8px;padding:12px" href="@Url.Action("Index","CategoryManager")">
                <i class="fas fa-times"></i>
            </a>
        </div>
    </div>
    <div class="card-body">
        <h2><label for="description">Tên danh mục:</label> @Model.CategoryName</h2>
        <div class="form-group">
            <label for="description">Mô tả:</label>
            <p id="description">@Model.Description</p>
        </div>
    <div class="form-group d-flex align-items-baseline justify-content-start" style="gap:52px;">
        <div class="d-flex" style="gap:16px;">
            <label for="price">Danh mục cha:</label>
            @{
                var db = new CategoryBUS();
                string parentName = "Không có danh mục cha";
                if (Model.ParentID != null)
                {
                    parentName = db.DanhMucCha((int)Model.ParentID);
                }
                int countProduct = db.SoLuongSanPham((int)Model.CategoryID);
            }
            <p id="price">@parentName</p>
        </div>
        <div class="d-flex" style="gap:16px;">
            <label for="price">Số lượng sản phẩm:</label>
            <p id="price">@countProduct</p>
        </div>
        <div class="d-flex" style="gap:16px;">
            <label for="price">Ngày lập:</label>
            <p id="price">@Model.CreatedDate</p>
        </div>
    </div>
        <!-- Thêm các thông tin khác về sản phẩm tùy ý -->
    </div>
    <!-- /.card-body -->
</div>

