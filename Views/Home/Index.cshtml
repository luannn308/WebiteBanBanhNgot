<!-- Product Section Begin -->
<section class="product spad">
    <div class="container d-flex flex-column" style="gap: 32px;">
        <div class="d-flex flex-column">
            <h2 style="text-align:center !important;"><strong><em>Sản phẩm mới</em></strong></h2>
            <br />
            <div class="row">
                @Html.Partial("_TopProduct", WebsiteCakeNew.Models.BUS.ShopBUS.TopNew())
            </div>
        </div>
        <div class="d-flex flex-column">
            <h2 style="text-align:center !important;"><strong><em>Sản phẩm yêu thích</em></strong></h2>
            <br />
            <div class="row">
                @Html.Partial("_TopProduct", WebsiteCakeNew.Models.BUS.ShopBUS.TopHot())
            </div>
        </div>
    </div>
</section>
