    <script>
        Dropzone.autoDiscover = false;
        $(document).ready(function () {
            var myDropzone = new Dropzone("#dropzoneContainer", {
                url: "@Url.Action("UploadImage", "ProductManager")",
                paramName: "file",
                maxFilesize: 5, // Kích thước tối đa của tập tin (đơn vị: MB)
                maxFiles: 1, // Số lượng tệp tin tối đa cho phép tải lên
                acceptedFiles: ".jpg, .png, .webp", // Chấp nhận chỉ tệp tin ảnh
                dictDefaultMessage: "Kéo và thả ảnh vào đây hoặc nhấp để chọn ảnh", // Hiển thị thông báo mặc định
                init: function () {
                    this.on("addedfile", function (file) {
                        $("#uploadedImage").val(file.name); // Gán giá trị là tên tệp tin
                    });
                }
            });
        });
